<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hamburgueria</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('header') %>
    <h2>Ingredientes</h2>

    <form method="get" action="/">
        <% let i = 0 %>
        <% ingredientes.forEach(ingrediente => { %>
                <input type="checkbox" id="<%= ingrediente.id %>" name="ingredientes" value="<%= ingrediente.id %>">
                <label for="<%= ingrediente.id %>"><%= ingrediente.nome %></label>
            <% if(++i == 5) { i = 0 %><br><% } %>
        <% }) %>
        <button type="submit">Filtrar</button>
        </tr>
    </form>

    <table>
        <tr>
            <th>Hambúrguer</th>
            <th>Descrição</th>
            <th>Preço</th>
        </tr>
        <% hamburgueres.forEach(hamburguer => { %>
            <tr>
                <td><%= hamburguer.nome %></td>
                <td><%= hamburguer.descricao %></td>
                <td>R$ <%= hamburguer.preco.toLocaleString('pt-BR', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
